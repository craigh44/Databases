<% if current_user %>
 <h1 id="main-title"> Welcome to your bookmark manager <%= current_user.email %></h1>
 <% else %>
 <h1 id="main-title">Welcome to Bookmark Manager<br> please <a href="/users/new">sign up</a> or <a href="/users/sign_in">sign in</a></h1>
 <!-- <a href="http://www.pandapop.co" target="_blank"><img id="pandas" src="/images/pandas.jpg"></a> -->
<% end %>


<% if current_user %>
<div id="new-link">
  <form action="/links" method="post">
    <input id="link-input" type="text" name="url" placeholder="URL">
  </br>
    <input id="link-input" type="text" name="title" placeholder="Title">
      </br>
   <!--  <input id="link-input" type="text" name="tags" placeholder="Tags"> -->
      </br></br>
    <input id="add-link-button" type="submit" value="Add link">
  </form>
</div>


<div id="all-links-section">
	<h3 id="links-list-title">My bookmarks</h3>
	<ul>
	  <% @current_user.links.each do |link| %>
	    <li><a href="http://<%= link.url %>"><%= link.title %></a></li>

	  <% end %>
	</ul>
</div>

<% end %>