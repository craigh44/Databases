<% if current_user %>
 <h1 id="main-title"> Welcome to your bookmark manager <%= current_user.email %></h1>
 <% else %>
 <h1 id="main-title">Welcome to Bookmark Manager<br> please sign up to view your bookmarks!</h1>
 <img id="pandas" src="/images/pandas.jpg"
<% end %>


<% if current_user %>
<div id="new-link">
  <form action="/links" method="post">
    <input id="link-input" type="text" name="url" placeholder="URL">
  </br>
    <input id="link-input" type="text" name="title" placeholder="Title">
      </br>
    <input id="link-input" type="text" name="tags" placeholder="Tags">
      </br></br>
    <input id="add-link-button" type="submit" value="Add link">
  </form>
</div>


<div id="all-links-section">
	<h3 id="links-list-title">My bookmarks</h3>
	<ul id="all-links-list">
	  <% @links.each do |link| %>
	    <li><a href="<%= link.url %>"><%= link.title %></a></li>

	  <% end %>
	</ul>
</div>

<% end %>